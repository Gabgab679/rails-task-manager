<h1>Edit Task</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :detail %>
  <%= f.text_field :detail %>
  <%= f.check_box :completed, {}, true, false %>
  <%= f.label :completed %>
  <%= f.submit  %>
<% end %>

<p><%= link_to "Back to list", tasks_path %></p>
